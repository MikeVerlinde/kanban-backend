generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String
  tickets     Ticket[]
}

model Lane {
  id          Int       @id @default(autoincrement())
  name        String
  position    Int       @unique
  createdAt   DateTime
  tickets     Ticket[]
}

model Ticket {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  createdAt       DateTime
  priority        TicketPriority
  laneId          Int
  lane            Lane @relation(fields: [laneId], references: [id])
  assigneeUserId  Int?
  assignee        User? @relation(fields: [assigneeUserId], references: [id])
}

enum TicketPriority {
  LOWEST
  LOW
  MEDIUM
  HIGH
  HIGHEST
}